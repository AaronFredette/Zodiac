@inherits Constellation.Foundation.Mvc.EditorCompatibleView<Feature.Content.Models.ContentSectionModel>

<div class="row">
	<div class="col-12">
		<h2>@Model.Heading</h2>
		<div class="rich-text">@Model.Copy</div>
		@if (this.IsEditing || !string.IsNullOrEmpty(Model.TrailingLinkUrl))
		{
			<div class="mb-4">
				@Model.TrailingLink
			</div>
		}
	</div>
</div>

